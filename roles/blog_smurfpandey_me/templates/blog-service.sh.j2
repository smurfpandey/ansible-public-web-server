#!/usr/bin/env bash
#
# Bash script to startup all components of ghost blog, mostly through
# docker and checking if services are available using wait-for-it

start() {
    docker-compose up -d {{ db_service_name }}
    docker-compose run --rm {{ wait_for_it_service_name }} {{ db_service_name }}:3306 -- echo "blog db is up"

    docker-compose up -d {{ ghost_service_name }}
    docker-compose run --rm {{ wait_for_it_service_name }} {{ ghost_service_name }}:{{ blog_port }} -- echo "blog is up"
}

stop() {
    docker-compose stop
}

restart() {
    stop
    start
}

case $1 in
    start) start;;
    stop) stop;;
    restart) restart;;
    "") start;;
    *) echo "Usage: ./service start|stop|restart"
esac
