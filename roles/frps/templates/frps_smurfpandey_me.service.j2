[Unit]
Description=Service for frps.smurfpandey.me
After=nginx.service
Requires=nginx.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory={{ frps_app_directory }}
ExecStart={{ docker_compose_binary }} up -d
ExecStop={{ docker_compose_binary }} stop
ExecReload={{ docker_compose_binary }} restart

[Install]
WantedBy=multi-user.target
